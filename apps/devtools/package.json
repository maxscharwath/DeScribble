{
  "name": "devtools",
  "version": "0.0.0",
  "displayName": "Condensation Devtools",
  "author": "Maxime Scharwath",
  "description": "A devtools extension for Condensation DS",
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch --mode development --minify false",
    "dev": "vite",
    "format": "eslint --ext .js,.jsx,.ts,.tsx,.vue src --fix",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.vue src",
    "serve:firefox": "web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/",
    "serve:chrome": "web-ext run -t chromium --start-url \"https://google.com\" --source-dir ./dist/"
  },
  "license": "MIT",
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "^3.1.1",
    "@types/chrome": "^0.0.217",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/webextension-polyfill": "^0.10.0",
    "@vitejs/plugin-react": "^3.1.0",
    "typescript": "^4.9.5",
    "vite": "~4.1.4",
    "web-ext": "^7.4.0",
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  }
}
